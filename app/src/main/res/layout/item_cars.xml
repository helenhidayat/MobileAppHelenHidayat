<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_car"
        android:layout_width="17dp"
        android:layout_height="101dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.917" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="115dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="268dp"
        android:src="@drawable/convertible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_width="111dp"
        android:layout_height="47dp"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:text="Convertible"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="68dp"
        android:text="Mobil Convertible biasanya memiliki bentuk yang kecil dengan bagian atap yang dapat"
        android:textSize="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coupe"
        android:layout_width="103dp"
        android:layout_height="68dp"
        android:layout_marginRight="260dp"
        android:src="@drawable/coupe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224" />

    <EditText
        android:id="@+id/textcoupe"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_marginRight="120dp"
        android:text="Coupe"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <ImageView
        android:layout_width="123dp"
        android:layout_height="68dp"
        android:layout_marginTop="292dp"
        android:layout_marginRight="240dp"
        android:src="@drawable/hatchback"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hatchback"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="68dp"

        android:text="Hatchback"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="78dp"
        android:layout_marginTop="444dp"

        android:layout_marginRight="236dp"
        android:src="@drawable/mpv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="73dp"
        android:layout_height="56dp"
        android:layout_marginTop="456dp"
        android:layout_marginRight="108dp"
        android:text="MPV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="132dp"
        android:layout_height="81dp"
        android:layout_marginTop="584dp"
        android:layout_marginRight="228dp"
        android:src="@drawable/suv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="77dp"
        android:layout_height="52dp"
        android:layout_marginTop="588dp"
        android:layout_marginRight="88dp"
        android:text="SUV"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>